generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Room {
  name    String   @id @unique
  reward  String
  bundles Bundle[]
}

model Bundle {
  name     String @id @unique
  reward   String
  slots    Int
  url      String @default("")
  room     Room   @relation(fields: [roomName], references: [name])
  items    Item[]
  roomName String
}

model Item {
  id         Int    @id @default(autoincrement())
  name       String
  quantity   Int
  url        String
  bundle     Bundle @relation(fields: [bundleName], references: [name])
  bundleName String
}

model Fish {
  id        Int      @id @default(autoincrement())
  name      String
  locations String[]
  time      String
  weather   String
  seasons   String[]
  url       String
}

model Achievement {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  url         String
}

model MonsterEradicationGoal {
  id       Int    @id @default(autoincrement())
  monster  String
  quantity Int
  reward   String
  url      String
}

model Farmer {
  id                               String                            @id
  username                         String
  selectedBundles                  SelectedBundle[]
  completedBundles                 CompletedBundle[]
  completedRooms                   CompletedRoom[]
  completedItems                   CompletedItem[]
  completedAchievements            CompletedAchievement[]
  completedMonsterEradicationGoals CompletedMonsterEradicationGoal[]
}

model SelectedBundle {
  name     String
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId String

  @@id([farmerId, name])
}

model CompletedBundle {
  name     String
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId String

  @@id([farmerId, name])
}

model CompletedRoom {
  name     String
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId String

  @@id([farmerId, name])
}

model CompletedItem {
  id       Int
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId String

  @@id([farmerId, id])
}

model CompletedAchievement {
  id       Int
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId String

  @@id([farmerId, id])
}

model CompletedMonsterEradicationGoal {
  id       Int
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId String

  @@id([farmerId, id])
}
