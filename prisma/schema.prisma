generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Room {
  name    String   @id @unique
  reward  String
  bundles Bundle[]
}

model Bundle {
  name     String @id @unique
  reward   String
  slots    Int
  room     Room   @relation(fields: [roomName], references: [name])
  items    Item[]
  roomName String
}

model Item {
  id         Int    @id @default(autoincrement())
  name       String
  quantity   Int
  bundle     Bundle @relation(fields: [bundleName], references: [name])
  bundleName String
}

model Farmer {
  id               Int               @id @default(autoincrement())
  username         String
  selectedBundles  SelectedBundle[]
  completedBundles CompletedBundle[]
  completedRooms   CompletedRoom[]
  completedItems   CompletedItem[]
}

model SelectedBundle {
  name     String
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId Int

  @@id([farmerId, name])
}

model CompletedBundle {
  name     String
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId Int

  @@id([farmerId, name])
}

model CompletedRoom {
  name     String
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId Int

  @@id([farmerId, name])
}

model CompletedItem {
  id       Int
  farmer   Farmer @relation(fields: [farmerId], references: [id])
  farmerId Int

  @@id([farmerId, id])
}
