generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Room {
  name    String   @id @unique
  reward  String
  bundles Bundle[]
}

model Bundle {
  name     String @id @unique
  reward   String
  room     Room   @relation(fields: [roomName], references: [name])
  items    Item[]
  roomName String
}

model Item {
  id         Int    @id @default(autoincrement())
  name       String
  quantity   Int
  bundle     Bundle @relation(fields: [bundleName], references: [name])
  bundleName String
}

model User {
  id               Int               @id @default(autoincrement())
  username         String
  selectedBundles  SelectedBundle[]
  completedBundles CompletedBundle[]
  completedRooms   CompletedRoom[]
  completedItems   CompletedItem[]
}

model SelectedBundle {
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int

  @@id([userId, name])
}

model CompletedBundle {
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int

  @@id([userId, name])
}

model CompletedRoom {
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int

  @@id([userId, name])
}

model CompletedItem {
  id     Int
  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@id([userId, id])
}
